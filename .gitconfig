[merge]
	tool = winmeld

[diff]
	tool = winmeld

[mergetool "winmeld"]
	cmd = meld --output $(cygpath -aw \"$MERGED\") $(cygpath -aw \"$LOCAL\") $(cygpath -aw \"$BASE\") $(cygpath -aw \"$REMOTE\")

[difftool "winmeld"]
	cmd = meld $(cygpath -aw \"$LOCAL\") $(cygpath -aw \"$REMOTE\")

[mergetool "ediff"]
	cmd = emacs --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"

[difftool "ediff"]
	cmd = emacs --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"

[core]
	excludesfile = ~/.gitignore_global
	autocrlf = true
	fileMode = false

[pretty]
    treeline= %C(bold blue)%h%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)

[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
    praise = blame
    tree = log --graph --all --abbrev-commit --decorate --pretty=treeline
    addnw=!sh -c 'git diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'

[push]
	default = simple
