[extensions]
color =
graphlog =
hgext.extdiff =

[ui]
username = Ashton Snelgrove <yashton@gmail.com>
ssh = ssh -C
merge = meld

[paths]
default = ssh://yashton@bitbucket.org/yashton/

[merge-tools]
emacs.args = -q --eval "(ediff-merge-with-ancestor \"$local\" \"$other\" \"$base\" nil \"$output\")"
meld.args = $base $local $other
meld.gui = True

[extdiff]
cmd.meld =
cmd.ediff = sh
opts.ediff = -c 'if [ -d $0 ]; then emacs --eval "(ediff-directories \"$0\" \"$1\" \"\")"; else emacs --eval "(ediff-files \"$0\" \"$1\")"; fi'
